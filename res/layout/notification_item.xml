<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seashell"
    android:orientation="horizontal"
    android:weightSum="10" >

    <ImageView
        android:id="@+id/problem_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="2"
        android:src="@drawable/services" />

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:layout_margin="3dp"
        android:background="@color/seashell"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:text="Title:Some problem with the network and other  ..."
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/seashell"
            android:orientation="horizontal"
            android:weightSum="7" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@color/seashell"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans"
                    android:textColor="@color/gray_60"
                    android:textStyle="italic"
                    android:text="14.07.2014" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans"
                    android:textStyle="italic"
                    android:textColor="@color/gray_60"
                    android:text="Status:Not Solved" />
            </LinearLayout>
            <ImageView
                android:id="@+id/expander"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/arraw_down" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/isImportantLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@color/seashell"
        android:orientation="horizontal" >

        <View
            android:id="@+id/line"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="@color/red_1" />

        <ImageView
            android:id="@+id/importantFlag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/flag_gray" />
    </LinearLayout>

</LinearLayout>